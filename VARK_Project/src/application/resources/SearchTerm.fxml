            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="yourKeyWord" layoutX="228.0" layoutY="147.0" prefHeight="26.0" prefWidth="212.0" promptText="Your Keyword">
         <font>
            <Font size="19.0" />
         </font>
      </TextField>
      <Button fx:id="enterButton" layoutX="475.0" layoutY="147.0" mnemonicParsing="false" onAction="#search" stylesheets="@../css/menu_button.css">
         <font>
            <Font size="20.0" />
         </font>
         <graphic>
            <ImageView fitHeight="54.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/search/search.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ProgressBar fx:id="progress" layoutX="234.0" layoutY="336.0" prefWidth="200.0" progress="0.0" />
